<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@drawable/crudupload"
    tools:context=".UploadActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="730dp"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="0dp"
      android:background="#E3E0CC"
      android:orientation="vertical"
      android:padding="20dp">

    <EditText
        android:id="@+id/uploadName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/lavender_border"
        android:gravity="start|center_vertical"
        android:hint="Enter name"
        android:padding="16dp"
        android:textColor="@color/lavender"
        android:textColorHint="#F44336"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/uploadOperator"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/lavender_border"
        android:gravity="start|center_vertical"
        android:hint="Enter operator"
        android:padding="16dp"
        android:textColor="@color/lavender"
        android:textColorHint="#FF9800"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/uploadLocation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/lavender_border"
        android:gravity="start|center_vertical"
        android:hint="Enter location"
        android:padding="16dp"
        android:textColor="@color/lavender"
        android:textColorHint="#8BC34A"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/uploadPhone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/lavender_border"
        android:gravity="start|center_vertical"
        android:hint="Enter phone number"
        android:padding="16dp"
        android:textColor="@color/lavender"
        android:textColorHint="#009688"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#E91E63"
        android:text="Save"
        android:textSize="34sp"
        android:textStyle="bold"
        app:cornerRadius="20dp" />
  </LinearLayout>
</LinearLayout>